{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automergeType": "pr",
  "automergeSchedule": [
    "every weekday"
  ],
  "dependencyDashboard": true,
  "prConcurrentLimit": 10,
  "lockFileMaintenance": {
    "enabled": true
  },
  "rangeStrategy": "pin",
  "labels": [
    "bot"
  ],
  "ignorePaths": [
    "**/vendor/**"
  ],
  "enabledManagers": [
    "composer"
  ],
  "packageRules": [
    {
      "automerge": true,
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ]
    },
    {
      "automerge": false,
      "matchUpdateTypes": [
        "major"
      ]
    }
  ]
}
