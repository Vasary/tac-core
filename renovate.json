{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "automergeType": "pr",
  "automergeSchedule": [
    "every weekday"
  ],
  "dependencyDashboard": true,
  "prConcurrentLimit": 1,
  "lockFileMaintenance": {
    "enabled": true
  },
  "rangeStrategy": "pin",
  "labels": [
    "bot",
    "dependency"
  ],
  "ignorePaths": [
    "**/vendor/**"
  ],
  "ignoreDeps": [
    "php"
  ],
  "enabledManagers": [
    "composer"
  ],
  "packageRules": [
    {
      "groupName": "Symfony/Doctrine/DAMA",
      "matchPackagePrefixes": [
        "symfony/*",
        "doctrine/*",
        "dama/*"
      ],
      "enabled": true,
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "groupName": "Other dependencies",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["major"],
      "enabled": false
    }
  ]
}
